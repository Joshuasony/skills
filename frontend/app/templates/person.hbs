<div id="right-grid" class="span9 sub-page">
  <a onclick={{action (toggle 'personEditing' this)}} class="pull-right">
    {{if personEditing  'Abbrechen' 'Editieren...'}}
  </a>
{{context}}
  {{person-delete personToDelete=model
    personEditing=personEditing
    }} 
  {{component (if personEditing 'person-edit' 'person-show' )
    person=model
    submit=(action (toggle 'personEditing' this))
    model-header-title = 'Personalien'
    }}
  {{competences-show competences=model.competences}}
  {{educations-show educations=model.educations}}
  {{advanced-trainings-show  advanced-trainings=model.advancedTrainings}}
  {{activities-show activities=model.activities}}
  {{projects-show projects=model.projects}}
</div>
