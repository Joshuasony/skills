<form onsubmit={{action 'submit' newProject}} id="form_project">
  <div id="project-content-edit" class="row-fluid" style="display: block;">
    <div class="span10">
      <div class="row-fluid">
        <div class="span2">
          {{input placeholder="von" value=newProject.year_from type="number" class="input-mini"}}
        </div>
        <div class="span10">
          {{input placeholder="Projekt Titel" value=newProject.title class="input-xxlarge"}}
        </div>
      </div>
      <div class="row-fluid">
        <div class="span2">
        {{input placeholder="bis" value=newProject.year_to type="number" class="input-mini"}}
        </div>
        <div class="span10">
          {{textarea placeholder="Projektbeschreibung" value=newProject.description class="input-xxlarge"}}
        </div>
      </div>
      <div class="row-fluid">
        <div class="span10 offset2">
          {{textarea placeholder="Rolle und Aufgaben" value=newProject.role class="input-xxlarge"}}
        </div>
      </div>
      <div class="row-fluid">
        <div class="span10 offset2">
          {{textarea placeholder="Eingesetzte Technologien" value=newProject.technology class="input-xxlarge"}}
        </div>
      </div>
    </div>
    <div class="span2">
      <button class="btn btn-primary btn-block btn-mini" >
        Speichern </button>
    </div>
  </div>
</form>
