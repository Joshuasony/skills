<section id="profil" class="section">
  {{#form-for newPerson submit=(action 'submit') as |f|}}
    <div class="row-fluid">
      <h2>Mitarbeiter erfassen</h2>
      <div class="span5">
        <span class="section-title">Personalien</span>
      </div>
      <div class="pull-right">
        {{f.submit "Speichern"}}
      </div>
    </div>
    <hr>
    <div class="row-fluid" id="profile-content-edit">
      <div class="span5">
        {{f.text-field 'name'}}
        {{f.text-field 'title' label="Titel"}}
        {{f.text-field 'role' label="Funktion"}}
        <div class="text-field form-group">
          <label class="label-date form-field--label" for='date_location'>Geb.Datum</label>
          <div id="date_location">
            {{bootstrap-datepicker format='dd.mm.yyyy' value=newPerson.birthdate autoclose=true}}
          </div>
        </div>
      </div>
      <div class="span5">
        {{f.text-field 'origin' label="Nationalit√§t"}}
        {{f.text-field 'location' label="Wohnort"}}
        {{f.text-field 'language' label="Sprache"}}
        {{f.text-field 'martialStatus' label="Zivilstand"}}
        {{#power-select
          selected=newPerson.company
          options=companiesToSelect
          onchange=(action (mut newPerson.company))
          as |company|
        }}
          {{company.name}}
        {{/power-select}}
      </div>
    </div>
  {{/form-for}}
</section>
