<section id="profil" class="section">
  {{#form-for newPerson submit=(action 'submit') as |f|}}
    <div class="card-header bg-primary">
      <div class="row">
        <div class="col-sm-6">
          <a class="card-link text-white" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">Person Erfassen</a>
        </div>
        <div class="col-sm-6 text-right d-block">
          {{! TODO: Submit via action submit doesnt work, are you sure message after click on delete button}}
          <a {{action 'submit' newPerson}} role="button" id="submit-button" class="card-link text-white"><i class="fa save"></i></a>
        </div>
      </div>
    </div>
    <div id="collapseOne" class="collapse show border border-primary rounded-bottom">
      <div class="card-body">
        <div class="row">
          <div class="col-sm-6">
            <table class="table-uebersicht">
              <tr>
                <td>{{f.text-field 'name'}}</td>
              </tr>
              <tr>
                <td>{{f.text-field 'title' label="Titel"}}</td>
              </tr>
              <tr>
                <td>{{f.text-field 'role' label="Funktion"}}</td>
              </tr>
              <tr>
                <td>
                  <div class="text-field form-group">
                    <label class="label-date form-field--label" for='date_location'>Geb.Datum</label>
                    <div id="date_location">
                      {{bootstrap-datepicker format='dd.mm.yyyy' value=newPerson.birthdate autoclose=true}}
                    </div>
                  </div>
                </td>
              </tr>
            </table>
          </div>
          <div class="col-sm-6">
            <table class="table-uebersicht">
              <tr>
                <td>{{f.text-field 'origin' label="Nationalit√§t"}}</td>
              </tr>
              <tr>
                <td>{{f.text-field 'location' label="Wohnort"}}</td>
              </tr>
              <tr>
                <td>{{f.text-field 'language' label="Sprache"}}</td>
              </tr>
              <tr>
                <td> {{f.text-field 'martialStatus' label="Zivilstand"}}</td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  {{/form-for}}
</section>