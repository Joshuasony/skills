<div class="card-header bg-info">
  <div class="row">
    <div class="col-sm-6">
      <a class="card-link text-dark header-text" href="#">Kernkompetenzen</a>
    </div>
    <div class="col-sm-6 text-right d-block">
      <a class="card-link text-dark" data-toggle="collapse" data-parent="#accordion" href="#"><i class="fa angle"></i></a>
    </div>
  </div>
</div>
<div>
  <div id="collapseOne" class="collapse show border border-info rounded-bottom">
    <div class="card-body d-flex flex-column">
      <div class="row">
        {{textarea value=person.competences class="competences-edit-input"}}
      </div>
      <div class="mt-2">
        <button {{action 'submit' person}} role="button" id="submit-button" class="btn btn-primary">Speichern</button>
        <button onclick={{action 'abortEdit'}} role="button" class="btn abort-button">Abbrechen</button>
      </div>
    </div>
  </div>
</div>
