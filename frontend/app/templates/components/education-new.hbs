<form onsubmit={{action 'submit' newEducation}} id="form_newEducation">
  <div id="newEducation-content-edit" class="zeile">
    <div class="row">
      <div class="col-sm-3">
        <div class="input-group centered-content-input">
          {{input value=newEducation.year_from type="number" class="input-mini form-control" placeholder="von"}}
          {{input value=newEducation.year_to type="number" class="input-mini form-control" placeholder="bis"}}
        </div>
      </div>
      <div class="col-sm-7">
        <div class="input-group centered-content-input">
          {{input value=newEducation.title class="input-xxlarge form-control" placeholder="Ausbildungsart, erhaltener Titel"}}
          {{input value=newEducation.location class="input-xxlarge form-control" placeholder="Ausbildungsort"}}
        </div>
      </div>
      <div class="col-sm-2 centered-content text-right">
        <a href="#" onclick={{action 'submit' newEducation}} role="button" id="submit-button" class="text-dark"><i class="fa save"></i></a>
      </div>
    </div>
  </div>
</form>
