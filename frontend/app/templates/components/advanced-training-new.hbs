<form onsubmit={{action 'submit' newAdvancedTraining}} id="form_advancedTraining">
  <div id="advancedTraining-content-edit" class="zeile new">
    <div class="row">
      <div class="col-sm-3">
        <div class="input-group centered-content-input">
          {{input value=newAdvancedTraining.year_from type="number" class="input-mini form-control" placeholder="von"}}
          {{input value=newAdvancedTraining.year_to type="number" class="input-mini form-control" placeholder="bis"}}
        </div>
      </div>
      <div class="col-sm-7">
        {{textarea placeholder="Beschreibung" value=newAdvancedTraining.description class="input-xxlarge form-control"}}
      </div>
      <div class="col-sm-2 centered-content text-right">
        <a href="#" onclick={{action 'submit' newAdvancedTraining}} role="button" id="submit-button" class="text-dark"><i class="fa save"></i></a>
      </div>
    </div>
  </div>
</form>
