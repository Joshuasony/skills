<form onsubmit={{action 'submit' newAdvancedTraining}} id="form_advancedTraining">
  <div id="advancedTraining-content-edit" class="zeile new">
    <div class="row">
      <div class="col-sm-3">
        <div class="input-group centered-content-input">
          {{daterange-edit entity=newAdvancedTraining}}
        </div>
      </div>
      <div class="col-sm-7 content-input">
        <label for="{{concat elementId '-new-desc'}}">Beschreibung</label>
        {{textarea id=(concat elementId '-new-desc') value=newAdvancedTraining.description class="input-xxlarge form-control"}}
      </div>
      <div class="col-sm-2 centered-content text-right">
        <a href="#" onclick={{action 'submit' newAdvancedTraining}} role="button" id="submit-button" class="text-dark"><i class="fa save"></i></a>
      </div>
    </div>
  </div>
</form>
