<section id="education" class="section">
  {{model-header title="Weiterbildung"}}
  <div id="advancedtraining-content-show" class="row-fluid">
    <div class="span12">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Zeit</th>
            <th>Beschreibung</th>
            <th class="action-header">Aktion</th>
          </tr>
        </thead>
        <tbody id="advanced-training-content-show">
          {{#each advanced-trainings as |advanced-training|}}
            <tr id="template_advancedtraining_record" class="template">
              <td id="show_year" class="show-year-cell">
               {{advanced-training.year_from}}-{{advanced-training.year_to}}
              </td>
              <td id="show_description" class="show-description-cell">
                {{advanced-training.description}}
              </td>
              <td>
                <a id="button-edit-advancedtraining" class="button">Edit</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>
