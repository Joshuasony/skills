<div class="advancedTraining">
  <div class="card-header bg-primary">
    <div class="row">
      <div class="col-sm-6">
        <a class="card-link text-white" data-toggle="collapse" data-parent="#accordion" href="#collapseAdvancedTraining">Weiterbildung</a>
      </div>
      <div class="col-sm-6 text-right d-block">
        <a onclick={{action (toggle 'advanced-trainingNew' this)}} role="button" class="card-link text-white"><i class="fa {{~if advanced-trainingNew ' abort' ' add'~}}"></i></a>
        <a class="card-link text-white" data-toggle="collapse" data-parent="#accordion" href="#collapseAdvancedTraining"><i class="fa angle"></i></a>
      </div>
    </div>
  </div>
  <div id="collapseAdvancedTraining" class="collapse show border border-primary rounded-bottom">
    <div class="card-body">
      <div id="advancedtraining-content-show">
        {{#each filteredAdvancedTrainings as |advanced-training|}}
          <div class="zeile">
            {{#if advanced-trainingEditing}}
              {{advanced-training-edit advanced-training=advanced-training done=(action (toggle 'advanced-trainingEditing' this))}}
            {{else}}
              {{advanced-training-show selectAdvancedTraining = (action (mut advanced-trainingEditing)) advanced-training=advanced-training}}
            {{/if}}
          </div>
        {{/each}}
        {{component (if advanced-trainingNew 'advanced-training-new')
            personId=personId done=(action (toggle 'advanced-trainingNew' this))}}
      </div>
    </div>
  </div>
</div>
