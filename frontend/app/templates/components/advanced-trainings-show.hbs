<section id="education" class="section">
  <!-- Profile heading -->
  <div class="row-fluid">
    <div class="span5">
      <span class="section-title">Weiterbildung</span>
    </div>
  </div>

  <!-- Horizontal ruler -->
  <div class="row-fluid">
    <div class="span12">
      <hr>
    </div>
  </div>
  <div id="advancedtraining-content-show" class="row-fluid">
    <div class="span12">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Zeit</th>
            <th>Beschreibung</th>
            <th class="action-header">Aktion</th>
          </tr>
        </thead>
        <tbody>
          {{#each advancedTrainings as |advancedTraining|}}
            <tr id="template_advancedtraining_record" class="template">
              <td id="show_year" class="show-year-cell">
               {{advancedTraining.year_from}}-{{advancedTraining.year_to}}
              </td>
              <td id="show_description" class="show-description-cell">
                {{advancedTraining.description}}
              </td>
              <td>
                <a id="button-edit-advancedtraining" class="button">Edit</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>
