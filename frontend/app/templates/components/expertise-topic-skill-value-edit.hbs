{{#with (changeset expertiseTopicSkillValue validations) as |changeset|}}
  <td class="fws-topic-name">{{expertiseTopic.name}}</td>
  <td>
    <input form={{formId}}
        max="80"
        min="0"
        class="fws-number-input"
        type="number"
        value={{expertiseTopicSkillValue.yearsOfExperience}}
        oninput={{action (mut expertiseTopicSkillValue.yearsOfExperience) value="target.value"}}>
  </td>
  <td>
    <input form={{formId}}
        max="255"
        min="0"
        class="fws-number-input"
        class="fws-number-input"
        type="number"
        value={{expertiseTopicSkillValue.numberOfProjects}}
        oninput={{action (mut expertiseTopicSkillValue.numberOfProjects) value="target.value"}}>
  </td>
  <td>
    <input form={{formId}}
        max="4095"
        min="1900"
        class="fws-year-input"
        type="number"
        value={{expertiseTopicSkillValue.lastUse}}
        oninput={{action (mut expertiseTopicSkillValue.lastUse) value="target.value"}}>
  </td>

  <td> 
    <select form={{formId}} class="fws-select selectpicker" onchange={{action (mut expertiseTopicSkillValue.skillLevel) value="target.value"}}>
      {{#each skillLevelData as |sld|}}
        <option value={{sld}} selected={{eq expertiseTopicSkillValue.skillLevel sld}}>{{sld}}</option>
      {{/each}}
    </select>
  </td>

  <td>
    <textarea class="fws-textarea-input"
        oninput={{action (mut expertiseTopicSkillValue.comment) value="target.value"}}
        >{{expertiseTopicSkillValue.comment}}</textarea>
  </td>
  <td>
    <form id={{formId}} onsubmit={{action onsubmit changeset}}>
      <button class="btn-link">
        <img class="fws-action-icon" alt="check" src="/assets/images/check.svg">
      </button>
    </form>
  </td>
{{/with}}
