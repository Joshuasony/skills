<div class="row">
  <div class="col-sm-3 centered-content text-center">
    {{activity.year_from}}
    {{#if (eq activity.year_to null)}}
      - heute
    {{else if (not-eq activity.year_from activity.year_to)}}
      - {{activity.year_to}}
    {{/if}}
  </div>
  <div class="col-sm-8">
    <strong>{{activity.role}}</strong>
    <br>{{~activity.description~}}
  </div>
  <div class="col-sm-1 text-right centered-content">
    <a onclick={{action selectActivity activity}} class="card-link text-dark"><i class="fa edit"></i></a>
  </div>
</div>