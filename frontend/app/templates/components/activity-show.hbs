<tr id="template_activity_record" class="template">
  <td id="show_year" class="show-year-cell">
    {{activity.year_from}}
    {{#unless (eq activity.year_from activity.year_to)}}
      -{{activity.year_to}}
    {{/unless}}
  </td>
  <td class="show-description-cell">
    <div>
      <div id="show_role" class="activity-role">
        {{activity.role}}<br>
      </div>
      <div id="show_description" class="activity-description">
        {{activity.description}}
      </div>
    </div>
  </td>
  <td>
    <a onclick={{action selectActivity activity}} id="button-edit-activities" class="button">Editieren</a>
  </td>
</tr>
