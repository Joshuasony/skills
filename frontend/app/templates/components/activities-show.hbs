<div id="activity">
  <div class="card-header bg-primary">
    <div class="row">
      <div class="col-sm-6">
        <a class="card-link text-white" data-toggle="collapse" data-parent="#accordion" href="#collapseActivity">Stationen</a>
      </div>
      <div class="col-sm-6 text-right d-block">
        <a onclick={{action (toggle 'activityNew' this)}} role="button" class="card-link text-white"><i class="fa {{~if activityNew ' abort' ' add'~}}"></i></a>
        <a class="card-link text-white" data-toggle="collapse" data-parent="#accordion" href="#collapseActivity"><i class="fa angle"></i></a>
      </div>
    </div>
  </div>
  <div id="collapseActivity" class="collapse show border border-primary rounded-bottom">
    <div class="card-body">
      <div id="competence-content-show">
        {{#each filteredActivities as |activity|}}
          <div class="zeile">
            {{#if activityEditing}}
              {{activity-edit activity=activity done=(action (toggle 'activityEditing' this))}}
            {{else}}
              {{activity-show selectActivity = (action (mut activityEditing)) activity=activity}}
            {{/if}}
          </div>
        {{/each}}
        {{component (if activityNew 'activity-new')
            personId=personId done=(action (toggle 'activityNew' this))}}
      </div>
    </div>
  </div>
</div>
