<div class="row">
  <div class="col-sm-12">
    <span class="text-right d-block"><strong>Letztes Update <span class="text-danger"><time datetime={{moment-format company.updatedAt}}>
      {{moment-format company.updatedAt 'L'}}
    </time></span></strong></span>
  </div>
</div>
<hr class="">
<div class="collapse-group">
  <div class="row mb-3">
    <div class="col-sm-12">
      <span class="text-right d-block controls"><a href="#" class="mr-2 open-button">+ alles ausklappen</a><a href="#" class="close-button">- alles einklappen</a></span>
    </div>
  </div>
  <div id="accordion">
    {{!Übersichts Tab}}
    <div class="card mb-3">
      {{component (if companyEditing 'company-uebersicht-edit' 'company-uebersicht' )
                  company=company
                  submit=(action (toggle 'companyEditing' this))
                  model-header-title = 'Firmen Übersicht'
                  companyEditing=(action (toggle 'companyEditing' this))
      }}
    </div>

    {{!Angebot Tab}}
    <div class="card mb-3">
      <div class="card-header bg-primary">
        <div class="row">
          <div class="col-sm-6">
            <a class="card-link text-white" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">Angebot</a>
          </div>
          <div class="col-sm-6 text-right d-block">
            <a class="card-link text-white"><i class="fa edit"></i></a>
            <a class="card-link text-white" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo"><i class="fa angle"></i></a>
          </div>
        </div>
      </div>
      <div id="collapseTwo" class="collapse border border-primary rounded-bottom">
        <div class="card-body">
          <div class="row mb-1">
            <div class="col-sm-3">
              <span class="p-2">Software Design & Methoden</span>
            </div>
            <div class="col-sm-9">
              <span class="badge badge-success p-2 mr-2 skill" href="#">Scrum</span>
              <span class="badge badge-success p-2 mr-2 skill" href="#">CI/CD</span>
              <span class="badge badge-success p-2 mr-2 skill" href="#">Hermes</span>
              <span class="badge badge-success p-2 mr-2 skill" href="#">BA</span>
            </div>
          </div>
          <div class="row mb-1">
            <div class="col-sm-3">
              <span class="p-2">Technologien</span>
            </div>
            <div class="col-sm-9">
              <span class="badge badge-success p-2 mr-2 skill" href="#">Java EE</span>
              <span class="badge badge-success p-2 mr-2 skill" href="#">Java SE</span>
              <span class="badge badge-success p-2 mr-2 skill" href="#">Angular</span>
              <span class="badge badge-success p-2 mr-2 skill" href="#">Docker</span>
              <span class="badge badge-success p-2 mr-2 skill" href="#">OpenShift</span>
            </div>
          </div>
          <div class="row mb-1">
            <div class="col-sm-3">
              <span class="p-2">Datenbanken</span>
            </div>
            <div class="col-sm-9">
              <span class="badge badge-success p-2 mr-2 skill" href="#">Mongo DB</span>
              <span class="badge badge-success p-2 mr-2 skill" href="#">PostgreSQL</span>
            </div>
          </div>
          <div class="row mb-1">
            <div class="col-sm-3">
              <span class="p-2">Weiteres (Bemerkungen)</span>
            </div>
            <div class="col-sm-9">
              <textarea class="form-control" rows="1">Lorem Ispum bla bla</textarea>
            </div>
          </div>
        </div>
      </div>
    </div>

    {{!Profile Tab}}
    <div class="card">
      <div class="card-header bg-primary">
        <div class="row">
          <div class="col-sm-6">
            <a class="card-link text-white" data-toggle="collapse" data-parent="#accordion" href="#collapseThree">Profile</a>
          </div>
          <div class="col-sm-6 text-right d-block">
            <a class="card-link text-white"><i class="fa edit"></i></a>
            <a class="card-link text-white" data-toggle="collapse" data-parent="#accordion" href="#collapseThree"><i class="fa angle"></i></a>
          </div>
        </div>
      </div>
      <div id="collapseThree" class="collapse border border-primary rounded-bottom">
        <div class="card-body">
          <div class="row mb-1">
            <div class="col-sm-3">
              <span class="badge badge-info profil-knopf" href="#">Max Muster</span>
            </div>
            <div class="col-sm-3">
              <span class="badge border border-secondary profil-knopf" href="#">Senior Penguin Master</span>
            </div>
            <div class="col-sm-3">
              <span class="badge border border-secondary profil-knopf" href="#">Dipl. Vogel</span>
            </div>
          </div>
          <div class="row mb-1">
            <div class="col-sm-3">
              <span class="badge badge-info profil-knopf" href="#">Darth Vader</span>
            </div>
            <div class="col-sm-3">
              <span class="badge border border-secondary profil-knopf" href="#">Imperator</span>
            </div>
            <div class="col-sm-3">
              <span class="badge border border-secondary profil-knopf" href="#">Lebensmiteltechnologe FH</span>
            </div>
          </div>
          <div class="row mb-1">
            <div class="col-sm-3">
              <span class="badge badge-success profil-knopf" href="#">Neues Profil</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>

  $(".open-button").on("click", function() {
    $(this).closest('.collapse-group').find('.collapse').collapse('show');
  });

  $(".close-button").on("click", function() {
    $(this).closest('.collapse-group').find('.collapse').collapse('hide');
  });
</script>