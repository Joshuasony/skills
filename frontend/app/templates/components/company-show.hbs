<div class="row">
  <div class="col-sm-12">
    <span class="text-right d-block">
      <strong>Letztes Update <span class="text-danger"><time datetime={{moment-format company.updatedAt}}>{{moment-format company.updatedAt 'L LT'}}</time></span></strong>
    </span>
  </div>
</div>
<hr class="">
<div class="collapse-group">
  <div class="row mb-3">
    <div class="col-sm-12">
      <span class="text-right d-block controls"><a href="#" class="mr-2 open-button">+ alles ausklappen</a><a href="#" class="close-button">- alles einklappen</a></span>
    </div>
  </div>
  <div id="accordion">
    {{!Übersichts Tab}}
    <div class="card mb-3">
      {{component (if companyEditing 'company-uebersicht-edit' 'company-uebersicht' )
                  company=company
                  submit=(action (toggle 'companyEditing' this))
                  model-header-title = 'Firmen Übersicht'
                  companyEditing=(action (toggle 'companyEditing' this))
      }}
    </div>

    {{!Angebot Tab}}
    <div class="card mb-3">
      {{component (if companySkillsEditing 'company-skills-edit' 'company-skills' )
                  company=company
                  submit=(action (toggle 'companySkillsEditing' this))
                  model-header-title = 'Firmen Skills'
                  companySkillsEditing=(action (toggle 'companySkillsEditing' this))
      }}
    </div>

    {{!Profile Tab}}
    <div class="card">
      <div class="card-header bg-primary">
        <div class="row">
          <div class="col-sm-6">
            <a class="card-link text-white" data-toggle="collapse" data-parent="#accordion" href="#collapseThree">Profile</a>
          </div>
          <div class="col-sm-6 text-right d-block">
            <a class="card-link text-white"><i class="fa edit"></i></a>
            <a class="card-link text-white" data-toggle="collapse" data-parent="#accordion" href="#collapseThree"><i class="fa angle"></i></a>
          </div>
        </div>
      </div>
      <div id="collapseThree" class="collapse border border-primary rounded-bottom">
        <div class="card-body">
          <div class="row mb-1">
            <div class="col-sm-3">
              <span class="badge badge-info profil-knopf" href="#">Donald J. Trump</span>
            </div>
            <div class="col-sm-3">
              <span class="badge border border-secondary profil-knopf" href="#">President</span>
            </div>
            <div class="col-sm-3">
              <span class="badge border border-secondary profil-knopf" href="#">TV Celebrity</span>
            </div>
          </div>
          <div class="row mb-1">
            <div class="col-sm-3">
              <span class="badge badge-info profil-knopf" href="#">Darth Vader</span>
            </div>
            <div class="col-sm-3">
              <span class="badge border border-secondary profil-knopf" href="#">Imperator</span>
            </div>
            <div class="col-sm-3">
              <span class="badge border border-secondary profil-knopf" href="#">Lebensmitteltechnologe FH</span>
            </div>
          </div>
          <div class="row mb-1">
            <div class="col-sm-3">
              <span class="badge badge-success profil-knopf" href="#">Neues Profil</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>

  $(".open-button").on("click", function() {
    $(this).closest('.collapse-group').find('.collapse').collapse('show');
  });

  $(".close-button").on("click", function() {
    $(this).closest('.collapse-group').find('.collapse').collapse('hide');
  });
</script>