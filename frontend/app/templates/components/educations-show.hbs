<section id="education" class="section">
  <button onclick={{action (toggle 'educationNew' this)}}
      id="button-new-educations"
      class="btn btn-link pull-right">
    {{~if educationNew 'Abbrechen' 'Neu'~}}
  </button>

  {{model-header title="Ausbildungen"}}

  {{#if educationEditing}}
    {{education-edit education = educationEditing done=(action (toggle 'educationEditing' this))}}
  {{else}}
    {{#if educationNew}}
      {{education-new personId=personId done=(action (toggle 'educationNew' this))}}
    {{else}}
      <div id="education-content-show" class="row-fluid">
        <div class="span12">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Zeit</th>
                <th>Beschreibung</th>
                <th class="action-header">Aktion</th>
              </tr>
            </thead>
            <tbody>
              {{#each sortedEducations as |education|}}
                {{education-show selectEducation = (action (mut educationEditing)) education=education}}
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    {{/if}}
  {{/if}}
</section>
