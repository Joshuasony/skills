<section id="education" class="section">
  {{model-header title="Ausbildungen"}}
  <div id="education-content-show" class="row-fluid">
      <div class="span12">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Zeit</th>
              <th>Beschreibung</th>
              <th class="action-header">Aktion</th>
            </tr>
          </thead>
          <tbody>
            {{#each educations as |education|}}
              {{education-show education=education}}
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
</section>
