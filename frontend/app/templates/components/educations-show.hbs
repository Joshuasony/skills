<section id="education" class="section">
  <!-- Profile heading -->
  <div class="row-fluid">
    <div class="span5">
      <span class="section-title">Ausbildung</span>
    </div>
  </div>

  <!-- Horizontal ruler -->
  <div class="row-fluid">
    <div class="span12">
      <hr>
    </div>
  </div>

  <div id="education-content-show" class="row-fluid">
      <div class="span12">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Zeit</th>
              <th>Beschreibung</th>
              <th class="action-header">Aktion</th>
            </tr>
          </thead>
          <tbody>
            {{#each educations as |education|}}
              <tr id="template_education_record" class="template">
                <td id="show_year" class="show-year-cell">
                  {{education.year_from}}-{{education.year_to}}
                </td>
                <td id="show_description" class="show-description-cell">
                  {{education.title}}
                  <br>{{education.location}}
                </td>
                <td>
                  <a id="button-edit-education" class="button">Edit</a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
</section>
